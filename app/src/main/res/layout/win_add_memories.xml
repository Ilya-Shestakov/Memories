<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_for_win"

    android:elevation="25dp"

    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_memories_in_win"

        android:layout_width="0dp"
        android:layout_height="40dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"

        android:background="@drawable/corner_right_top_bot"

        android:elevation="25dp"
        >

        <EditText
            android:id="@+id/edit_text_title_memories_in_win"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:background="@null"

            android:hint="Title"
            android:textSize="20sp"
            android:fontFamily="@font/josefin_sans_bold"
            android:textColorHint="@color/gray_for_shadow"
            android:textColor="@color/black"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/desc_memories_in_win"

        android:layout_width="0dp"
        android:layout_height="170dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_memories_in_win"

        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"

        android:background="@drawable/corner_right_top_bot"

        android:elevation="25dp"
        >

        <EditText
            android:id="@+id/edit_text_desc_memories_in_win"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="top"

            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:background="@null"

            android:hint="Description"
            android:textSize="15sp"
            android:fontFamily="@font/josefin_sans_bold"
            android:textColorHint="@color/gray_for_shadow"
            android:textColor="@color/black"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_ok_add_memories"

        android:layout_width="50dp"
        android:layout_height="50dp"

        app:layout_constraintTop_toBottomOf="@+id/desc_memories_in_win"
        app:layout_constraintEnd_toEndOf="@+id/desc_memories_in_win"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="-25dp"

        android:background="@drawable/btn_next_login_full"

        android:elevation="25dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:src="@drawable/baseline_check_24"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>